<div class="form__wrapper">
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title">
        <%= link_to "#{t ".initiatives"} > ", initiatives_path %>
        <%= decidim_sanitize_translated(initiative.title) %>
      </h2>
    </div>

    <div class="card-section">
      <% if initiative.has_custom_fields? %>
        <div class="row column">
          <strong><%= t("decidim.initiatives.show.question") %>: </strong>
          <%= decidim_sanitize_editor translated_attribute(initiative.question) %>
        </div>
        <div class="row column">
          <strong><%= t("decidim.initiatives.show.definition") %>: </strong>
          <%= decidim_sanitize_editor translated_attribute(initiative.definition) %>
        </div>
        <div class="row column">
          <strong><%= t("decidim.initiatives.show.reasons") %>: </strong>
          <%= decidim_sanitize_editor translated_attribute(initiative.reasons) %>
        </div>
      <% else %>
        <div class="row column">
          <strong><%= t ".description" %>: </strong> <%= decidim_sanitize_editor translated_attribute(initiative.description) %>
        </div>
      <% end %>
      <div class="row column">
        <strong><%= t ".created_at" %>: </strong> <%= l initiative.created_at, format: :decidim_short %>
      </div>
      <div class="row column">
        <strong><%= t ".state" %>: </strong> <%= I18n.t(initiative.state, scope: "decidim.initiatives.admin_states") %>
      </div>
      <div class="row column">
        <strong><%= t ".initiative_votes_count" %>: </strong> <%= initiative.online_votes_count %>
      </div>
    </div>
  </div>
</div>
